{
  "ASSETS": {
    "src": "assets/**/*.{json,eot,otf,svg,ttf,woff,woff2}",
    "dest": "assets/"
  },
  "CSS": {
    "src": "assets/sass/**/*.{sass,scss}",
    "dest": "assets/css/"
  },
  "ERROR": "Error: <%= error.message %>",
  "HTML": {
    "entries": "pages/**/*.{html,hbs,handlebars}",
    "src": "{layouts,partials,helpers,data,pages}/**/*",
    "dest": "",
    "paniniOptions": {
      "root": "/src/pages/",
      "layouts": "/src/layouts/",
      "partials": "/src/partials/",
      "helpers": "/src/helpers/",
      "data": "/src/data/"
    }
  },
  "IMAGES": {
    "src": "assets/images/**/*.{gif,jpg,jpeg,png,svg}",
    "dest": "assets/images/"
  },
  "JS": {
    "src": "assets/js/**/*.js",
    "entries": "assets/js/app.js",
    "dest": "assets/js/"
  },
  "PATH": {
    "src": "src/",
    "dest": "dist/"
  },
  "SERVER": {
    "port": 8000,
    "root" : "dist/"
  }
}
